@model ClassViewModel

<!-- Include the alert partial view -->
@await Html.PartialAsync("_AlertPartial")


<h2>Delete Class</h2>

<div>
    <p>Are you sure you want to delete this class?</p>
    <div asp-validation-summary="All" class="text-danger"></div>

    <dl class="row">
        <dt class="col-sm-2">Class ID</dt>
        <dd class="col-sm-10">@Model.ClassId</dd>

        <dt class="col-sm-2">Class Name</dt>
        <dd class="col-sm-10">@Model.ClassName</dd>
    </dl>
</div>

<form asp-action="Delete" asp-route-id="@Model.ClassId" method="post">
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="ClassList">Back to List</a>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    }
