@model ClassViewModel

<!-- Include the alert partial view -->
@await Html.PartialAsync("_AlertPartial")


<h2>Edit Class</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- Hidden field for ClassId -->
    <input type="hidden" asp-for="ClassId" />

    <!-- Form field for ClassName with label and validation messages -->
    <div class="form-group">
        <label asp-for="ClassName" class="control-label"></label>
        <input asp-for="ClassName" class="form-control" />
        <span asp-validation-for="ClassName" class="text-danger"></span>
    </div>

    <!-- Add other input fields for additional properties with labels and validation messages -->

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index">Back to List</a>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    }
